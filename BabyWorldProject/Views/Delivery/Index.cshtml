
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Content/Pages/Delivery.js"></script>

<h2>Delivery Page</h2>
<style>
    label {
        color: black;
        text-transform: uppercase;
        font-weight: 500;
    }

    table, th, td {
        border: 1px solid black;
    }

        table.center {
            margin-left: auto;
            margin-right: auto;
        }
</style>

<label>DeliveryID:</label>
<input type="hidden" id="txthd" />
<br />
<div class="row">
    <div class="col-sm-3">
<label>CustomerID:</label>
<input type="text" class="form-control" id="txtCustomerID" placeholder="Enter Customer ID" />
<br />
<label>PersonName:</label>
<input type="text" class="form-control" id="txtPersonName" placeholder="Enter Person Name" />
<br />
<label>Address:</label>
<input type="text" class="form-control" id="txtAddress" placeholder="Enter Address" />
<br />
     </div>
    <div class="col-sm-2">
        <label>City:</label>
        <input type="text" class="form-control" id="txtCity" placeholder="Enter City" />
        <br />
        <label>Landmark:</label>
        <input type="text" class="form-control" id="txtLandmark" placeholder="Enter Landmark" />
        <br />
    </div>
    <div class="col-sm-2">
        <label>Pincode:</label>
        <input type="text" class="form-control" id="txtPincode" placeholder="Enter Pincode" />
        <br />
        <label>Type:</label>
        <select class="form-control" id="txtType">
        <option>Self-Delivery</option>
        <option>Third-party-Delivery</option>
        <option>Distributor-Delivery</option>
        </select>
        <br />
    </div>
</div>

<input type="button" class="btn btn-primary" value="submit" onclick="SaveDelivery()" />

<table bgcolor="aqua" id="tblDelivery1"class="center"border="1">
    <thead>
        <tr>
            <th>DeliverID</th>
            <th>CustomerID</th>
            <th>PersonName</th>
            <th>Address</th>
            <th>City</th>
            <th>Landmark</th>
            <th>Pincode</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>